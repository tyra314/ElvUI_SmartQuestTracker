require 'rake/packagetask'
require 'rake'

task :default => :package

task :clean => :clobber_package

task :build => [:clean, :package]

Rake::PackageTask.new("ElvUI_SmartQuestTracker", :noversion) do |p|
    p.need_zip = true
    p.package_files.include("*.toc")
    p.package_files.include("Readme.md")
    p.package_files.include("**/*.xml")
    p.package_files.include("**/*.lua")
end
